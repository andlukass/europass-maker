{
  "name": "cv-creator",
  "version": "1.0.0",
  "description": "Europass CV PDF generator",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run css:build && tsc",
    "css:build": "tailwindcss -i src/render/tailwind-input.css -o src/render/tailwind.css --minify",
    "css:dev": "tailwindcss -i src/render/tailwind-input.css -o src/render/tailwind.css",
    "start": "PLAYWRIGHT_BROWSERS_PATH=./.browsers node dist/index.js",
    "dev": "npm run css:dev && PLAYWRIGHT_BROWSERS_PATH=./.browsers tsx src/index.ts"
  },
  "keywords": [
    "cv",
    "europass",
    "pdf"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "node-telegram-bot-api": "^0.67.0",
    "playwright": "^1.49.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.0",
    "@types/node-telegram-bot-api": "^0.64.13",
    "chokidar": "^4.0.3",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0"
  }
}
